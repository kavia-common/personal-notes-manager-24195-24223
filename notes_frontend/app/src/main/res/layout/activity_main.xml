<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ocean_background"
    tools:context=".ui.MainActivity">

    <!-- Header with subtle gradient effect simulated via shape background -->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/bg_header_gradient"
        android:gravity="bottom"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/ocean_surface"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_search"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="8dp">

            <EditText
                android:id="@+id/searchInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/search_hint"
                android:background="@android:color/transparent"
                android:textColor="@color/ocean_text"
                android:textColorHint="@color/ocean_primary_tint"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:padding="0dp" />

            <ImageButton
                android:id="@+id/clearSearch"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_icon_button"
                android:src="@drawable/ic_close"
                app:tint="@color/ocean_primary"
                android:contentDescription="@string/clear_search"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notesRecycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header"
        android:padding="16dp"
        android:clipToPadding="false" />

    <TextView
        android:id="@+id/emptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/empty_notes"
        android:textColor="@color/ocean_primary"
        android:textSize="16sp"
        android:visibility="gone" />

    <!-- Floating Action Button -->
    <FrameLayout
        android:id="@+id/fabAdd"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:background="@drawable/bg_fab"
        android:elevation="8dp">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_add"
            app:tint="@color/ocean_surface"
            android:contentDescription="@string/add_note" />
    </FrameLayout>

</RelativeLayout>
